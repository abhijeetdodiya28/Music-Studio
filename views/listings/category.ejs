<% layout('/layouts/boilerplate') %>

    <h1 class="text-center my-4">
        <%= category %> Instrument Listings
    </h1>

    <div class="container">
        <div class="row justify-content-center">
            <% listings.forEach(listing=> { %>
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div id="carousel-<%= listing._id %>" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <% listing.images.forEach((image, index)=> { %>
                                    <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                        <img src="<%= image.url %>" class="d-block w-100 rounded"
                                            alt="<%= listing.name %> Image">
                                    </div>
                                    <% }) %>
                            </div>
                            <button class="carousel-control-prev" type="button"
                                data-bs-target="#carousel-<%= listing._id %>" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button"
                                data-bs-target="#carousel-<%= listing._id %>" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">
                                <%= listing.name %>
                            </h5>
                            <p class="card-text"><strong>Location:</strong>
                                <%= listing.location %>
                            </p>
                            <p class="card-text"><strong>Price:</strong> â‚¹<%= listing.price.toLocaleString("en-IN") %>
                            </p>
                            <p class="card-text"><strong>Facilities:</strong>
                                <%= listing.facilities.join(', ') %></p>
                        <p class="card-text"><strong>Status:</strong> <%= listing.availability ? ' Available'
                                    : 'Not Available' %>
                            </p>
                            <a href="/listings/<%= listing._id %>" class="btn btn-dark">View Details</a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>