<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-6 offset-4 mb-3 login-box">
            <h1 class="loginh1"><b>Login User</b></h1>
            <form action="/login" method="post" class="needs-validation" novalidate>
                <div class="mb-3"> <!-- Username -->
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="username" required>
                    <div class="invalid-feedback">
                        Name should be valid
                    </div>
                </div>

                <div class="mb-3"> <!-- Password -->
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                    <div class="invalid-feedback">
                        Password should be valid
                    </div>
                </div>

                <!-- Login Button -->
                <button class="btn btn-success btn-custom">
                    <i class="fa-solid fa-right-to-bracket"></i> Login
                </button>
            </form>
            <h4 class="mt-3">Other Options for login</h4>

            <!-- Social Login Buttons -->
            <div class="social-login">
                <a href="/auth/google" class="btn btn-danger btn-social">
                    <i class="fa-brands fa-google"></i> Login with Google
                </a>

                <a href="/auth/facebook" class="btn btn-primary btn-social">
                    <i class="fa-brands fa-facebook-f"></i> Login with Facebook
                </a>

                <a href="/auth/github" class="btn btn-dark btn-social">
                    <i class="fa-brands fa-github"></i> Login with GitHub
                </a>

            </div>
        </div>
    </div>